<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Demo.Animation.Activity</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Main">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Demo.Animation.Activity.SlidingBack</item>
    </style>
</resources>